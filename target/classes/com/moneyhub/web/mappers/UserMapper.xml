<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moneyhub.web.mappers.UserMapper">
    <resultMap type="com.moneyhub.web.domains.UserDTO" id="client">
        <id column="CID" property="cid"/>
        <result column="PWD" property="pwd"/>
        <result column="CNAME" property="cname"/>
    </resultMap>
    
	<select id="selectClientById" resultMap="client">
       select CID, PWD, CNAME from client where CID like #{cid} and PWD like #{pwd}
    </select>
    
    <insert id="insertClient">
         INSERT INTO CLIENT (CID, PWD, CNAME) VALUES (
            #{cid}, #{pwd}, #{cname}
        )
    </insert>
</mapper>